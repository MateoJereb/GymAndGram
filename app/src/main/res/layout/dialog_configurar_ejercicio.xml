<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:theme="@style/BackgroundColor">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/configurar_ejercicio"
                    android:theme="@style/TitleText"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/eliminarButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/red_pastel"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/ejercicio"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ejercicioEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/series"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/seriesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/repeticiones"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/repeticionesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/peso"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pesoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/kg"
                        android:layout_gravity="center_vertical"
                        android:theme="@style/TextoSecundario.OpuestoFondo"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/tiempo"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/tiempoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/unidadTiempoSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="center_vertical" />

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="@string/observaciones"
                    android:theme="@style/TextoSecundario.OpuestoFondo"
                    android:gravity="end" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/observacionesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textAppearance="@style/TextoSecundario.OpuestoFondo" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirmarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmar"
                android:theme="@style/DefaultButton"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="end"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>